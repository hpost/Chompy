<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">@dimen/elevation_toolbar</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Toolbar.Flat">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Toolbar.Translucent">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="TabLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="Scrollable">
        <item name="android:clipToPadding">false</item>
        <item name="android:listDivider">?attr/background</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="ViewAnimator">
        <item name="android:inAnimation">@android:anim/fade_in</item>
        <item name="android:outAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ViewAnimator.Slide">
        <item name="android:inAnimation">@anim/slide_in_from_right</item>
        <item name="android:outAnimation">@anim/slide_out_to_left</item>
    </style>

    <style name="ViewAnimator.Slide.Vertical">
        <item name="android:inAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:outAnimation">@anim/slide_out_to_top</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Small" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Header" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">serif</item>
    </style>

</resources>
